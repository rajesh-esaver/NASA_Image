<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullImageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadStyle" parent="android:Widget.TextView">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#336699</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DescStyle" parent="android:Widget.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#262429</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
